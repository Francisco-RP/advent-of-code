  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Deno debug",
      "type": "pwa-node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/usr/local/bin/deno",
      "runtimeArgs": ["run", "--inspect-brk", "-A", "${file}"],
      "attachSimplePort": 9229,
      "env": {
        "DEBUGGING": "true"
      }
    }
  ]
}
